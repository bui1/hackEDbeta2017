<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.hiddengems.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"

        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:fontFamily="@font/aclonica"
            android:padding="16dp"
            android:text="Hidden Gems"


            android:textAlignment="center"
            android:textColor="#0033cc"
            android:textSize="36sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="cursive"
            android:paddingBottom="40dp"

            android:text="Find the most extroadinary places at the places you travel to"
            android:textAlignment="center"
            android:textColor="#0033cc"
            android:textSize="24sp" />


        <Button
            android:id="@+id/started"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginBottom="30dp"
            android:background="#ea841e"
            android:onClick="buttonOnClick"
            android:text="Let's Get Started!"
            android:textColor="#000000"

            />


    </LinearLayout>

</android.support.constraint.ConstraintLayout>
